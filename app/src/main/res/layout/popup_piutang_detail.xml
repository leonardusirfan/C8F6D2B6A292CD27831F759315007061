<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp20"
        android:paddingEnd="@dimen/dp20"
        android:paddingBottom="@dimen/dp20">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total yang dibayar"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:id="@+id/txt_total_bayar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Cara Bayar"
            android:textSize="@dimen/sp14"/>

        <RadioGroup
            android:id="@+id/rb_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/GreenViewTheme"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_tunai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tunai"
                android:checked="true" />

            <RadioButton
                android:id="@+id/rb_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp30"
                android:text="Bank" />

            <RadioButton
                android:id="@+id/rb_giro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp30"
                android:text="Giro" />

        </RadioGroup>

        <LinearLayout
            android:id="@+id/layout_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lbl_akun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Akun"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/sp14"/>

            <Spinner
                android:id="@+id/spn_akun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_giro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/lbl_bank_penerbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Penerbit"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/sp14"/>

            <EditText
                android:id="@+id/txt_bank_penerbit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:theme="@style/GreenViewTheme"
                android:inputType="text"/>

            <TextView
                android:id="@+id/lbl_nomor_giro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nomor Giro"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/sp14"/>

            <EditText
                android:id="@+id/txt_nomor_giro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp16"
                android:theme="@style/GreenViewTheme"
                android:inputType="textPhonetic"/>

            <TextView
                android:id="@+id/lbl_tgl_giro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal Giro"
                android:layout_marginTop="15dp"
                android:textSize="@dimen/sp14"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_tgl_giro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp10"
                    android:gravity="center"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/img_tgl_giro"
                    android:layout_width="@dimen/medium_icon_size"
                    android:layout_height="@dimen/medium_icon_size"
                    android:src="@android:drawable/ic_menu_my_calendar" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:layout_marginTop="15dp"
            android:textSize="@dimen/sp14"/>

        <EditText
            android:id="@+id/txt_keterangan"
            android:theme="@style/GreenViewTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp14"
            android:minLines="2"
            android:maxLines="2">

        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Posisi anda dengan outlet adalah"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/txt_jarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp20"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/btn_peta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/very_dark_gray"
                android:text="Peta Outlet"
                android:textColor="#000"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/dp20"
                android:layout_marginEnd="@dimen/dp10"/>

            <Button
                android:id="@+id/btn_bayar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:text="Bayar"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/dp10"
                android:layout_marginEnd="@dimen/dp20"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>